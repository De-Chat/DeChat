{
  "name": "@dechat/monorepo",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier . --write",
    "frontend:dev": "pnpm --filter frontend dev",
    "frontend:start": "pnpm --filter frontend start",
    "contracts:dev": "pnpm run --filter @dechat/contracts deploy",
    "prepare": "husky install"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "^18.0.0",
        "react-dom": "^18.0.0",
        "next": "^12.0.0",
        "@nomiclabs/hardhat-ethers": "0.3.0-beta.13",
        "ethers": "^5.0.0"
      }
    }
  },
  "devDependencies": {
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "next": "^12.2.5",
    "prettier": "^2.5.1",
    "turbo": "^1.4.3",
    "typescript": "^4.8.2"
  }
}
